<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Главная</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="main-container">
    <header>
      <a href="/catalog" class="logo">KoduMööbel</a>
      <div class="header-links-right">
        <a href="/basket"><img src="/images/basket.png" alt=""></a>
        <a href="/profile"><div class="header-button">Профиль</div></a>
      </div>
    </header>

    <div class="basket-container">
      <div class="basket-cards-container">
        <% furniture.forEach(function(item, index) { %>
          <div class="card-container" style="width: 50%;" id="<%= item._id %>">
            <div class="card">
              <div class="card-content-container">
                <img src="/uploads/<%= item.photoLink %>" alt="">
                <p class="card-title"><%= item.title %></p>
                <p class="card-price"><%= item.price %></p>
              </div>
              <button class="basket-card-button">
                <p class="basket-card-button-minus" id="minusButton<%= index %>">-</p>
                <p id="quantityDisplay<%= index %>" class="quantityDisplay">1</p>
                <p class="basket-card-button-plus" id="plusButton<%= index %>">+</p>
              </button>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="basket-order-container">
        <h1>Заказ</h1>
        <p id="total">Сумма: 1853€</p>
    
        <input type="text" placeholder="Адрес доставки" id="addressInput">
        <input type="text" placeholder="Контактная информация" id="contactInput">
    
        <center><button id="checkoutButton">Оформить заказ</button></center>
      </div>
    </div>

  <script src="/javascripts/basket.js"></script>
</body>
</html>