<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Главная</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="main-container">
    <header class="admin-header">
        <a href="/admin/">Каталог</a>
        <a href="/admin/adding">Добавить мебель</a>
        <a href="/admin/orders">Заказы</a>
        <a href="/users/logout">Выйти из аккаунта</a>
      </header>

    <div class="profile-orders-container">
        <h1>Заказы</h1>

        <% orders.forEach(function(order) { %>
          <div class="order-container">
            <div class="order-text-container">
              <h1>Номер заказа: <%= order.number %></h1>
              <p>Статус: <%= order.status %></p>
            </div>
            <div class="order-list-container">
              <% order.furniture.forEach(function(item) { %>
                <p><%= item.furnitureTitle %> <%= item.quantity %> шт.</p>
              <% }); %>
            </div>
            <div class="order-contant-container">
              <p>Адрес доставки: <%= order.address %></p>
              <p>Контактная информация: <%= order.contact %></p>
              <p><%= order.total %></p>
            </div>
            <div class="order-buttons-container">
              <button onclick="setOrderStatus('<%= order._id %>', 'Оплачено')">Оплачено</button>
              <button onclick="setOrderStatus('<%= order._id %>', 'В доставке')">В доставке</button>
              <button onclick="setOrderStatus('<%= order._id %>', 'Доставлено')">Доставлено</button>
              <button onclick="deleteOrder('<%= order._id %>')">Удалить</button>
            </div>
          </div>
        <% }); %>
    </div>
  </div>

  <script src="/javascripts/admin.js"></script>
</body>
</html>